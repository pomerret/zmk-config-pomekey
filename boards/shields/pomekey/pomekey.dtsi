#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/input_transform.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <physical_layouts.dtsi>
#include "pomekey_layouts.dtsi"

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &physical_layout;
        zmk,matrix-transform = &default_transform;
    };

    encoder: encoder {
        compatible = "alps,ec11";
        a-gpios = <&xiao_d 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&xiao_d 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <80>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder>;
        triggers-per-rotation = <24>;
    };

    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <5>; 
        map = <
            RC(5,0) RC(4,0) RC(3,0) RC(2,0) RC(1,0) RC(0,1)     RC(0,6) RC(1,5) RC(2,5) RC(3,5) RC(4,5) RC(5,5)
            RC(5,1) RC(4,1) RC(3,1) RC(2,1) RC(1,2) RC(0,2)     RC(0,7) RC(1,7) RC(2,6) RC(3,6) RC(4,6) RC(5,6)
            RC(5,2) RC(4,2) RC(3,2) RC(2,3) RC(1,3) RC(0,3)     RC(0,8) RC(1,8) RC(2,8) RC(3,7) RC(4,7) RC(5,7)
            RC(5,3) RC(4,3) RC(3,4) RC(2,4) RC(1,4) RC(0,4)     RC(0,9) RC(1,9) RC(2,9) RC(3,9) RC(4,8) RC(5,8)
            RC(5,4)                                                                                     RC(5,9)
        >;
    };

    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-charlieplex";
        status = "okay";
        wakeup-source;
    };

    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;
        trackball_split: trackball_split@0 {
            compatible = "zmk,input-split";
            reg = <0>;
            status = "disabled";
        };
    };

    peripheral_listener: peripheral_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&trackball_split>;
    };

    central_listener: central_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
    };

    zip_xy_to_scroll_mapper: zip_xy_to_scroll_mapper {
        compatible = "zmk,input-processor-xy-to-scroll-mapper";
        #input-processor-cells = <0>;
    };

    zip_scroll_scaler: zip_scroll_scaler {
        compatible = "zmk,input-processor-scaler";
        #input-processor-cells = <2>;
        type = <INPUT_EV_REL>;
        codes = <INPUT_REL_WHEEL INPUT_REL_HWHEEL>;
    };
};

&pinctrl {
    spi0_default: spi0_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,
                <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                <NRF_PSEL(SPIM_MISO, 0, 4)>;
        };
    };
    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,
                <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                <NRF_PSEL(SPIM_MISO, 0, 4)>;
            low-power-enable;
        };
    };
};

&spi0 {
    compatible = "nordic,nrf-spim";
    status = "disabled";
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";
    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;
};

&vbatt {
    output-ohms = <503000>;
    full-ohms = <(1000000 + 503000)>;
};